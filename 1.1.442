#%Module -*- tcl -*-
##
## modulefile
##
proc ModulesHelp { } {
  puts stderr "\tAdds [module-info name] to your environment.\n"
}

module-whatis "adds RStudio-Server to your environment variables"

set           rstudio_server_vers   1.1.422
set           img_root              /cm/shared/apps/singularity/images
set-alias	  rstudio-server        "singularity exec -B /cm/shared/apps/R/3.5.0/lib64/R/library:/extR/library1,/rcc/stor1/refdata/R/library:/extR2/library2 ${img_root}/rstudio-server-${rstudio_server_vers}_latest.simg rserver --www-port ${PORT} --auth-none 0 --auth-pam-helper pam_help"

if ![ is-loaded 'singularity' ] {
  module load singularity
}

